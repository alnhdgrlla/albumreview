

<h1>All of the Reviews</h1>

<% if @reviews.empty? %>
  <h3> (no reviews ) </h3>
<% end %>

<% @reviews.each do |r| %>
  <ul>
    <li> <%= r.content %>
      <% if current_user.id == r.user_id %>
        <%= button_to "delete", [@album, r] , method: :delete, data: {confirm: "are you sure?"} %>
      <% end %>
    </li>
  </ul>
<%end %>

<%= will_paginate @reviews %>

<%= render "new", artist: @artist %>

<%= link_to 'Home', root_path %>


