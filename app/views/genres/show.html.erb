<h1>All Artist Of <%= @genre.genre_name %> </h1>

<% @artists.each do |a| %>
<h3><%= link_to a.name, artist_albums_path(a.id) %> / total_album:
  <%= Album.where(artist_id: a).count  %></h3>
<% end %>

<%= will_paginate @artists %>

