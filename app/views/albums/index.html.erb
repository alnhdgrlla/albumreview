<h1>All Albums Of <%= @artist.name %> </h1>

<% @albums.each do |a| %>
  <h3>--<%= a.title %>--</h3>
  <% if current_user.id == a.user_id %>
    <h4><%= link_to "Edit this album", edit_artist_album_path(@artist, a) %></h4>
  <% end %>
  <h4> <%= link_to "<Reviews>", album_reviews_path(a) %> / total: <%= Review.where(album_id: a).count %></h4>
  <h4> <%= link_to "<Songs>", album_songs_path(a) %> / total: <%= Song.where(album_id: a).count %></h4>
<% end %>

<%= link_to 'Post Album', new_artist_album_path(@artist) %> <br>
<%= link_to 'Home', root_path %>
